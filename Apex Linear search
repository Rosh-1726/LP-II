public class linear { 
    public static void runLinearSearch() { 
        // Example array 
        Integer[] arr = new Integer[] {5, 8, 12, 20, 25}; 
        Integer key = 12; // The element to search for 
 
        System.debug('Array: ' + arr); 
        System.debug('Element to search: ' + key); 
 
        // Perform Linear Search 
        Boolean found = false; 
        for (Integer i = 0; i < arr.size(); i++) { 
            if (arr[i] == key) { 
                System.debug('Element found at index: ' + i); 
                found = true; 
                break; 
            } 
        } 
 
        if (!found) { 
            System.debug('Element not found in the array.'); 
        } 
    } 
}
